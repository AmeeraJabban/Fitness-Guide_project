@using PagedList;
@using PagedList.Mvc;
@model IPagedList<FitnessAmeera.Models.ApplicationUser>

@{
    ViewBag.Title = "المشتركون";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*ameera*@        @* قائمة المشتركين  *@      @*45149*@


<div class="thumbnail" style="background-color:white;padding-bottom:100px;margin:1px">
    <div style="background:url(../../Content/images/adminheader.jpg)  fixed no-repeat ;height:200px;">
    </div>
    <div class="col-md-12 thumbnail" style="background-color:lavender;margin-top:5px">
        <h4 style="text-align:center;color:black">
            <span class="glyphicon glyphicon-user"></span>&nbsp; قائمة المستخدمين
            (@ViewBag.count)
        </h4>


    </div>
    <div class="table-responsive col-md-12" style="padding:0px">
        <table class="table table-striped table-hover">
            <tr style="background-color:lavenderblush">
                <th style="font-weight:900">
                    @Html.Label(" البريد الإلكتروني")
                </th>
                <th style="font-weight:900">
                    @Html.Label("العمر")
                </th>
                <th style="font-weight:900">
                    @Html.Label(" الجنس")
                </th>
                <th style="font-weight:900">
                    @Html.Label(" الوزن")
                </th>
                <th style="font-weight:900">
                    @Html.Label(" الطول")
                </th>

                <th style="font-weight:900">
                    @Html.Label(" الحالة")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>

                    <td style="font-size:large">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td style="font-size:large">
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td style="font-size:large">
                        @Html.DisplayFor(modelItem => item.Sex)
                    </td>
                    <td style="font-size:large">
                        @Html.DisplayFor(modelItem => item.Weight)
                    </td>
                    <td style="font-size:large">
                        @Html.DisplayFor(modelItem => item.Heigh)
                    </td>
                    <td style="font-size:large">
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>


                    <td>
                        @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-eye-open", title = "تفاصيل" })  |
                        @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash", title = "حذف" })
                    </td>
                </tr>
            }

        </table>
    </div>
    @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }))
    <p class="col-md-3 btn-lg btn-primary" role="button" style="margin-right:10px">

        <span class="glyphicon glyphicon-share-alt"></span>
        @Html.ActionLink("العودة إلى القائمة", "../home/index", null, new { @style = "color:black;font-weight:500" })


    </p>
</div>


