@using PagedList;
@using PagedList.Mvc;
@model IPagedList<FitnessAmeera.Models.ApplicationUser>

@{
    ViewBag.Title = "المختصون";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class=" thumbnail" style="background-color:white;padding-bottom:100px;margin:1px">
    <div style="background:url(../../Content/images/adminheader.jpg)  fixed no-repeat ;height:200px;">
    </div>
    <div class="col-md-12 thumbnail" style="background-color:lavender;margin-top:5px">
        <h4 style="text-align:center;color:black">
            <span class="glyphicon glyphicon-knight"></span>&nbsp; قائمة المختصيين
            (@ViewBag.count)
        </h4>


    </div>
    <div class="col-md-12 thumbnail">
        <p class="btn btn-block btn-success glyphicon glyphicon-plus">
            @Html.ActionLink("  إضافة  مختص جديد  ", "Create", null, new { @style = " color:black;font-weight:500;font-size:larger" })
        </p>



    </div>
    <div class="table-responsive col-md-12" style="padding:0px">

        <table class="table table-striped table-hover">
            <tr style="background-color:lavenderblush">
                <th style="font-weight:900;font-size:larger">
                    @Html.Label("البريد الإلكتروني")
                </th>
                <th></th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>

                    <td>


                        @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit", title = "تعديل" }) &nbsp; | &nbsp;
                        @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-eye-open", title = "تفاصيل" }) &nbsp; | &nbsp;
                        @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash", title = "حذف" })&nbsp;
                    </td>

                </tr>
            }

        </table>
    </div>
    @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }))


    <p class="col-md-2 btn-lg btn-primary" role="button" style="margin-right:10px">

        <span class="glyphicon glyphicon-share-alt"></span>
        @Html.ActionLink("العودة إلى القائمة", "../home/index", null, new { @style = "color:black;font-weight:500" })


    </p>
</div>
