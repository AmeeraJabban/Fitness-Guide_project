@model FitnessAmeera.Models.FitnessTips

@{
    ViewBag.Title = "التفاصيل";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row thumbnail" style="background-color:white;padding-bottom:100px;margin:1px">
    <div style="background:url(../../Content/images/health-and-fitness.jpg)   no-repeat ;background-size:cover ;height:200px;">
    </div>
    <div class="col-md-12 thumbnail" style="background-color:lavender;margin-top:5px">
        <h4 style="text-align:center;color:black">
            <span class="glyphicon glyphicon-duplicate"></span>&nbsp; @Html.DisplayFor(model => model.TipTitle)

        </h4>


    </div>
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <img src="~/uploads/@Html.DisplayFor(model => model.TipImage)" class="thumbnail img-responsive" style="width:500px; height:400px" />
    </div>
    <div class="col-md-3"></div>

    <div class="col-md-12">

        <table>
            <tr>

                <td style="border-top:0px; font-size:large;color:black">
                    @Html.DisplayFor(model => model.TipSummary)
                    <br />
                    <br />
                </td>
            </tr>

            <tr>
                <td style="border-top:0px; border-bottom: 1px solid #ddd;font-size:large;color:black">
                    @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(model => model.TipDetails).ToString()))
                </td>
            </tr>
        </table>
        <br />
        <br />
        <br />
        <br />
    </div>



    <div class="col-md-12">


        <p class="col-md-3 btn-lg btn-primary" role="button" style="margin-right:10px">

            <span class="glyphicon glyphicon-share-alt"></span>
            @Html.ActionLink("العودة إلى القائمة", "../home/index", null, new { @style = "color:black;font-weight:500" })

        </p>
    </div>
    <div class="col-md-12">
        <p></p>
    </div>
    <div class="col-md-12"><p></p></div>
</div>

