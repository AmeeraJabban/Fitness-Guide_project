@model FitnessAmeera.Models.MySavedArticles

@{
    ViewBag.Title = "حذف";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row thumbnail" style="background-color:white;padding-bottom:100px;margin:1px">
    <div style="background:url(../../Content/images/health-and-fitness.jpg)   no-repeat ;background-size:cover ;height:200px;">
    </div>
    <div class="col-md-12 thumbnail" style="background-color:lavender;margin-top:5px">
        <h4 style="color:black">
            <span class="glyphicon glyphicon-trash"></span>&nbsp;هل أنت متأكد من أنك تريد حذف هذا المقال من المحفوظات؟
        </h4>


    </div>
    <h4 style="color:black;font-size:large">
        @Html.DisplayFor(model => model.articles.ArticleTitle)
    </h4>
    <div class="col-md-3"></div>
    <div class="col-md-6">

        <img src="~/uploads/@Html.DisplayFor(model => model.articles.ArticleImage)" class="img-responsive thumbnail" style="width:500px; height:400px" />

        <br />
        <br />

    </div>
    <div class="col-md-3"></div>

    @using (Html.BeginForm())
            {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color col-md-12">
            <input type="submit" value="حذف" class="btn btn-danger col-md-2 btn-lg" />
            <p class="col-md-3 btn-lg btn-primary" role="button" style="margin-right:10px">

                <span class="glyphicon glyphicon-share-alt"></span>

                @Html.ActionLink("العودة إلى القائمة", "GetMySavedArticles", null, new { @style = "color:black;font-weight:500" })
            </p>
        </div>
    }
</div>

