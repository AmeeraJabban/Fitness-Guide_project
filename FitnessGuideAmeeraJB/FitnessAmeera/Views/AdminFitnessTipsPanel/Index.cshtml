@using PagedList;
@using PagedList.Mvc;
@model IPagedList<FitnessAmeera.Models.FitnessTips>

@{
    ViewBag.Title = "نصائح التغذية";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="thumbnail" style="background-color:white;padding-bottom:100px;margin:1px">
    <div style="background:url(../../Content/images/adminheader.jpg)  fixed no-repeat ;height:200px;">
    </div>
    <div class="col-md-12 thumbnail" style="background-color:lavender;margin-top:5px">
        <h4 style="text-align:center;color:black">
            <span class="glyphicon glyphicon-scale"></span>&nbsp; قائمة بالتوجيهات المخصصة
            (@ViewBag.count)
        </h4>


    </div>

    <div class="table-responsive col-md-12" style="padding:0px">

        <table class="table table-striped table-hover">
            <tr style="background-color:lavenderblush">
                <th style="font-weight:900;width:100px;font-size:larger">
                    @Html.DisplayNameFor(model => model.First().TipTitle)
                </th>
                <th style="font-weight:900;width:100px;font-size:larger">
                    @Html.DisplayNameFor(model => model.First().TipSummary)
                </th>

                <th style="font-weight:900;width:200px;font-size:larger">
                    @Html.DisplayNameFor(model => model.First().TipDetails)
                </th>
                <th style="font-weight:900;width:100px;font-size:larger">
                    @Html.DisplayNameFor(model => model.First().TipStatus)
                </th>
                <th style="font-weight:900;width:100px;font-size:larger">
                    @Html.DisplayNameFor(model => model.First().ArticlesTypes.Type)
                </th>
                <th style="font-weight:900;width:100px;font-size:larger">
                    @Html.Label("المختص")
                </th>

                <th style="font-weight:900;width:100px;font-size:larger">
                    @Html.DisplayNameFor(model => model.First().TipDate)
                </th>

                <th style="font-weight:900;width:100px;font-size:larger">
                    @Html.DisplayNameFor(model => model.First().TipImage)
                </th>
                <th style="width:100px"></th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="font-size:large">
                        @Html.DisplayFor(modelItem => item.TipTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipSummary).ToString().Substring(0, 20)....
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.TipDetails).ToString().Substring(0, 50)....
                    </td>
                    <td style="font-size:large">
                        @Html.DisplayFor(modelItem => item.TipStatus)
                    </td>
                    <td style="font-size:large">
                        @Html.DisplayFor(modelItem => item.ArticlesTypes.Type)
                    </td>
                    <td style="font-size:large">
                        @Html.DisplayFor(modelItem => item.User.UserName).ToString().Substring(0, item.User.UserName.LastIndexOf('@'))
                    </td>

                    <td style="font-size:large">
                        @Html.DisplayFor(modelItem => item.TipDate)
                    </td>
                    <td>
                        <img src="~/uploads/@Html.DisplayFor(modelItem => item.TipImage)" class="thumbnail" style="width:90px; height:70px" />
                    </td>
                    <td>
                        @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-eye-open", title = "تفاصيل" }) &nbsp;    |  &nbsp;
                        @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash", title = "حذف" })

                    </td>
                </tr>
            }

        </table>
    </div>
    @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }))



    <p class="col-md-3 btn-lg btn-primary" role="button" style="margin-right:10px">

        <span class="glyphicon glyphicon-share-alt"></span>
        @Html.ActionLink("العودة إلى القائمة", "../home/index", null, new { @style = "color:black;font-weight:500" })


    </p>
</div>

